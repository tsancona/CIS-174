@model OlympicTeamsViewModel
@{
    ViewData["Title"] = "Favorites";
}

<div class="text-center mb-4">
    <h2>My Favorites</h2>
    <form asp-action="Delete" method="post">
        <a asp-action="Index" asp-controller="Olympic" class="btn btn-primary"
           asp-route-activeGame="@Model.ActiveGame"
           asp-route-activeCat="@Model.ActiveCat">
            Back to Home Page
        </a>
        <button type="submit" class="btn btn-primary">
            Clear Favorites
        </button>
    </form>
</div>


<div class="row">
    <div class="col-8 offset-2">
        <ul class="list-group">
            @foreach (OlympicTeam team in Model.OlympicTeams)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-4">
                            <img src="~/images/@team.FlagImage" alt="" />
                        </div>
                        <div class="col-sm-4">
                            @team.Name
                        </div>
                        <div class="col-sm-4">
                            @team.OlympicGame.Name @team.OlympicCategory.Name
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>