@model PersonModel
@{
    ViewData["Title"] = "Age Calculator";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.CalculatedAgeMessage</h1>
    <form asp-action="Index" method="post">
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" />
        </div>
        <div class="mb-3">
            <label asp-for="BirthYear">Birth Year:</label>
            <input asp-for="BirthYear" />
        </div>
        <button type="submit" class="btn btn-primary">Calculate Age</button>
        <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
    </form>
</div>
